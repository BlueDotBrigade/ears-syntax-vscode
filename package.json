{
  "name": "ears-syntax-vscode",
  "displayName": "EARS Syntax",
  "description": "EARS (Easy Approach to Requirements Syntax) is a structured natural language template for specifying requirements, often using everyday phrases organized into clauses like When, While, If, and Then to describe events, conditions, and expected outcomes clearly and unambiguously.",
  "version": "2.0.0",
  "publisher": "BlueDotBrigade",
  "icon": "assets/logo.png",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "EARS",
    "Easy Approach to Requirements Syntax",
    "SRS",
    "Requirements",
    "Documentation"
  ],
  "homepage": "https://github.com/BlueDotBrigade/ears-syntax-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueDotBrigade/ears-syntax-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/BlueDotBrigade/ears-syntax-vscode/issues"
  },
  "license": "MIT",
  "contributes": {
    "languages": [
      {
        "id": "ears",
        "aliases": [
          "EARS Syntax"
        ],
        "extensions": [
          ".ears"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ears",
        "scopeName": "text.ears",
        "path": "./syntaxes/ears.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ears",
        "path": "./snippets/ears.code-snippets"
      }
    ]
  }
}
